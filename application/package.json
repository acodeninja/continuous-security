{
  "name": "@continuous-security/application",
  "version": "1.1.0",
  "description": "Command line application for running security scans against application code.",
  "scripts": {
    "test": "LANG=en_GB.utf8 TZ=UTC jest",
    "build": "webpack",
    "update-cwe": "scripts/update-cwe.js",
    "lint": "eslint ./src",
    "update-scanner-types": "cd ../scanners && for d in $(ls); do [ $d != '_base' ] && cd $d && npm run update-types && cd ..; done",
    "update-scanner-list": "scripts/update-scanner-list.js",
    "prepublishOnly": "npm run update-scanner-list && npm run build"
  },
  "keywords": [],
  "author": "Lawrence <lawrence@acode.ninja>",
  "license": "MPL-2.0",
  "bin": {
    "continuous-security": "build/continuous-security"
  },
  "files": [
    "build/*",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "devDependencies": {
    "@inquirer/checkbox": "^1.3.2",
    "@inquirer/select": "^1.2.2",
    "@types/dockerode": "^3.3.14",
    "@types/jest": "^29.2.6",
    "@types/lodash": "^4.14.191",
    "@types/npm": "^7.19.0",
    "@types/tar-stream": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@xmldom/xmldom": "^0.8.6",
    "axios": "^1.4.0",
    "commander": "^10.0.0",
    "dockerode": "^3.3.4",
    "eslint": "^8.33.0",
    "eventemitter2": "^6.4.9",
    "jest": "^29.3.1",
    "lodash": "^4.17.21",
    "minify-xml": "^3.4.0",
    "tar-stream": "^3.0.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "typescript-eslint": "^0.0.1-alpha.0",
    "unzip-stream": "^0.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "xml-query": "^1.5.0",
    "xml-reader": "^2.4.3",
    "xpath": "^0.0.32",
    "yaml": "^2.2.1",
    "zlib": "^1.0.5"
  },
  "overrides": {
    "semver": ">=7.5.3"
  }
}
