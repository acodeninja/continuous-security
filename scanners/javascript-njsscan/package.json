{
  "name": "@continuous-security/scanner-javascript-njsscan",
  "version": "1.2.0",
  "description": "Run njsscan against your nodejs codebase.",
  "main": "build/main.js",
  "scripts": {
    "test": "jest src/",
    "test:integration": "jest test/integration.test.ts",
    "build": "webpack",
    "lint": "eslint .",
    "prepublishOnly": "npm run update-types && npm run build",
    "update-types": "mkdir -p ./build && cp ../../application/types.scanner.d.ts ./types.d.ts && cp ./types.d.ts ./build/main.d.ts && echo \"\ndeclare const _scanner: Scanner;\nexport default _scanner;\n\" >> ./build/main.d.ts"
  },
  "keywords": [
    "security",
    "scanner",
    "@continuous-security"
  ],
  "files": [
    "build/*",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acodeninja/continuous-security.git",
    "directory": "scanners/javascript-njsscan"
  },
  "private": false,
  "author": "Lawrence <lawrence@acode.ninja>",
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack-cli": "^5.0.1"
  },
  "overrides": {
    "semver": ">=7.5.3"
  }
}
